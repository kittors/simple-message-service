{
  "name": "simple-message-service",
  "version": "1.0.0",
  "private": true,
  "description": "一个简单的消息推送和展示服务 (多包版本)。",
  "main": "index.js",
  "scripts": {
    "dev:backend": "pnpm --filter simple-message-service-backend dev",
    "dev:frontend": "pnpm --filter simple-message-service-frontend dev",
    "dev": "turbo run dev --parallel",
    "build:backend": "pnpm --filter simple-message-service-backend build",
    "build:frontend": "pnpm --filter simple-message-service-frontend build",
    "clean": "rm -rf dist",
    "build": "pnpm clean && pnpm build:frontend && pnpm build:backend && pnpm post-build-setup",
    "post-build-setup": "pnpm copy:env && pnpm copy:deploy && node scripts/generate-prod-pkg.js && pnpm install:dist-backend",
    "copy:env": "cp .env.prod dist/.env",
    "copy:deploy": "cp deploy/Dockerfile dist/ && cp deploy/docker-compose.yml dist/",
    "install:dist-backend": "cd dist/backend && npm install --omit=dev",
    "start": "cross-env NODE_ENV=production node dist/backend/server.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "cross-env": "^7.0.3",
    "pm2": "^5.4.2",
    "turbo": "^2.0.4"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@9.4.0"
}